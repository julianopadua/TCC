@article{ahajjam2025wildfire,
  title = {Enhancing prediction of wildfire occurrence and behavior in Alaska using spatio-temporal clustering and ensemble machine learning},
  author = {Ahajjam, Abdelali and others},
  journal = {Ecological Informatics},
  volume = {77},
  year = {2025},
  pages = {102963},
  doi = {10.1016/j.ecoinf.2024.102963},
  url = {https://doi.org/10.1016/j.ecoinf.2024.102963},
  abstract = {Wildfires are among the most destructive natural disasters, particularly in regions like Alaska where climate change is increasing their frequency and severity. Accurate prediction of wildfire occurrence and behavior is crucial for efficient resource allocation and disaster mitigation. This study introduces an ensemble machine learning framework combined with spatio-temporal clustering to enhance the predictive performance. Using a comprehensive dataset of historical fires, topography, meteorological variables, and vegetation indices, the proposed approach achieves higher accuracy in both occurrence and spread prediction compared to baseline models. The findings support the integration of advanced AI techniques in fire management strategies.}

}

@article{cilli2022xai,
  title = {Explainable artificial intelligence (XAI) detects wildfire occurrence in the Mediterranean countries of Southern Europe},
  author = {Cilli, Riccardo and others},
  journal = {Scientific Reports},
  volume = {12},
  year = {2022},
  pages = {16832},
  doi = {10.1038/s41598-022-20347-9},
  url = {https://www.nature.com/articles/s41598-022-20347-9},
  abstract = {In recent years, wildfires have become more frequent and severe in the Mediterranean region, making their prediction a critical challenge. This study presents an explainable artificial intelligence (XAI) framework that integrates Random Forest with SHAP (SHapley Additive exPlanations) to predict wildfire occurrence and provide transparent decision-making support. The model is trained on environmental and socio-economic variables across Southern Europe and achieves high predictive performance. The integration of SHAP allows for detailed interpretation of variable importance, enabling more informed prevention and mitigation policies.}

}

@article{illarionova2025geo,
  title = {Exploration of geo-spatial data and machine learning algorithms for robust wildfire occurrence prediction},
  author = {Illarionova, Svetlana and others},
  journal = {Scientific Reports},
  volume = {15},
  year = {2025},
  pages = {94002},
  doi = {10.1038/s41598-025-94002-4},
  url = {https://www.nature.com/articles/s41598-025-94002-4},
  abstract = {The increasing frequency of wildfires worldwide highlights the need for accurate and timely prediction systems. This paper explores the integration of geospatial datasets with machine learning algorithms for predicting wildfire occurrences. Using satellite-derived indices, topographic data, and weather variables, several machine learning models including Random Forest and XGBoost are evaluated. The study demonstrates the impact of spatial resolution and noise on predictive accuracy and proposes optimization strategies for handling spatial heterogeneity in wildfire modeling.}
}

@misc{karurung2025indonesia,
  title = {Assessment of forest fire vulnerability prediction in Indonesia: seasonal variability analysis using machine learning techniques},
  author = {Karurung, Wenny S. and Lee, Kwang and Lee, Woo},
  year = {2025},
  url = {https://ssrn.com/abstract=4882359},
  note = {Preprint},
  abstract = {This study assesses forest fire vulnerability in Indonesia by applying various machine learning algorithms to multi-temporal datasets. It focuses on seasonal variability, identifying periods of high susceptibility based on meteorological and environmental variables. Using decision tree-based classifiers and neural networks, the research evaluates model robustness and spatial transferability. The findings suggest that incorporating seasonal patterns significantly improves predictive performance and may aid in proactive fire management policies in tropical regions.}
}

@article{pang2022china,
  title = {Forest fire occurrence prediction in China based on machine learning methods},
  author = {Pang, Y. and others},
  journal = {Remote Sensing},
  volume = {14},
  number = {21},
  pages = {5546},
  year = {2022},
  doi = {10.3390/rs14215546},
  url = {https://www.mdpi.com/2072-4292/14/21/5546},
  abstract = {Forest fires in China have caused severe ecological and economic losses. This study evaluates the performance of four machine learning models—Random Forest, XGBoost, Support Vector Machine, and K-Nearest Neighbors—for predicting forest fire occurrence based on climatic, topographic, and vegetation indices. The models are trained on historical fire data from 2003 to 2016, and the Random Forest model shows the highest accuracy. The findings provide a reference for building operational fire prediction systems in complex geographic regions.}
}

@article{sayad2019predictive,
  title = {Predictive modeling of wildfires: a new dataset and machine learning approach},
  author = {Sayad, Youssef O. and Mousannif, Hanan and Al Moatassime, Hicham},
  journal = {Fire Safety Journal},
  volume = {105},
  year = {2019},
  pages = {1--13},
  doi = {10.1016/j.firesaf.2019.01.006},
  url = {https://doi.org/10.1016/j.firesaf.2019.01.006},
  abstract = {Wildfires are becoming more frequent and intense due to climate change and human activities. However, predicting the occurrence of wildfires remains a major challenge. This paper proposes a machine learning-based approach to predict wildfire occurrences. We first introduce a new dataset constructed from real-world environmental and climatic variables. Then, several classification algorithms (e.g., Decision Trees, Random Forests, SVM) are trained and evaluated on the dataset. The results show that machine learning can be effectively used for wildfire prediction and offer promising avenues for early warning systems.}
}

@article{shahzad2024pakistan,
  title = {Comparing machine learning algorithms to predict vegetation fire detections in Pakistan},
  author = {Shahzad, Fawad and others},
  journal = {Fire Ecology},
  volume = {20},
  year = {2024},
  number = {15},
  doi = {10.1186/s42408-024-00289-5},
  url = {https://fireecology.springeropen.com/articles/10.1186/s42408-024-00289-5},
  abstract = {Accurate prediction of vegetation fire detection is essential to reduce socio-economic losses and environmental degradation. This study compares various machine learning (ML) models, including Random Forest, SVM, Logistic Regression, and XGBoost, to predict fire detections using meteorological and fire hotspot data in Pakistan. The models are evaluated using multiple metrics, and Random Forest shows superior accuracy. The findings highlight the potential of ML models in fire management systems and provide policy insights for disaster mitigation.}
}

@article{shmuel2025lightning,
  title = {Global lightning-ignited wildfires prediction and climate change projections based on explainable machine learning models},
  author = {Shmuel, Amir and others},
  journal = {Scientific Reports},
  volume = {15},
  year = {2025},
  pages = {92171},
  doi = {10.1038/s41598-025-92171-w},
  url = {https://www.nature.com/articles/s41598-025-92171-w},
  abstract = {Lightning-induced wildfires represent a significant portion of natural fire events globally. This study employs explainable machine learning models to predict such events using meteorological, topographical, and lightning strike data. The model is trained on global historical datasets and is capable of projecting fire risks under various climate change scenarios. SHAP values are used for interpretability, revealing the dominant role of humidity, wind, and lightning density. The results provide a global early-warning framework relevant for climate adaptation strategies.}
}

@article{zhang2024ensemble,
  title = {Predicting forest fire area growth rate using an ensemble algorithm},
  author = {Zhang, Lin and Shi, Chen and Zhang, Fei},
  journal = {Forests},
  volume = {15},
  number = {9},
  pages = {1493},
  year = {2024},
  doi = {10.3390/f15091493},
  url = {https://www.mdpi.com/1999-4907/15/9/1493},
  abstract = {Forest fire growth prediction is crucial for effective fire management and resource allocation. In this paper, we present an ensemble algorithm that integrates multiple regression techniques to predict the area growth rate of forest fires. The model incorporates climatic, geographical, and satellite-derived variables. Evaluation on historical fire data demonstrates that the ensemble model outperforms individual predictors in terms of RMSE and R². The proposed method offers a reliable decision-support tool for firefighting strategies and policy planning.}
}

@article{andrianarivony2024review,
  title = {Machine Learning and Deep Learning for Wildfire Spread Prediction: A Review},
  author = {Andrianarivony, Heritiana S. and Akhloufi, Mustapha A.},
  journal = {Fire},
  volume = {7},
  number = {12},
  pages = {482},
  year = {2024},
  doi = {10.3390/fire7120482},
  url = {https://doi.org/10.3390/fire7120482},
  abstract = {Wildfires are a growing concern for forested areas across the globe. Rapidly evolving wildfire behavior presents a significant challenge for emergency response efforts and mitigation strategies. In this context, modeling the spread of wildfires becomes critical for effective planning and response. This paper presents a comprehensive review of current machine learning (ML) and deep learning (DL) techniques for predicting wildfire spread. The review highlights the advantages and limitations of various approaches, such as decision trees, random forests, support vector machines, artificial neural networks, convolutional neural networks, recurrent neural networks, and graph neural networks. It also discusses the role of input data, including topographical, meteorological, and vegetation features, and the integration of remote sensing data. Challenges related to data scarcity, generalization, explainability, and computational demands are discussed. Finally, the paper outlines promising directions for future research, such as physics-informed machine learning, transfer learning, and hybrid modeling frameworks.}
}

@article{giuseppe2025global,
  title = {Global data-driven prediction of fire activity},
  author = {Di Giuseppe, Francesca and McNorton, Joe and Lombardi, Alessandro and others},
  journal = {Nature Communications},
  volume = {16},
  pages = {2918},
  year = {2025},
  doi = {10.1038/s41467-025-58097-7},
  url = {https://www.nature.com/articles/s41467-025-58097-7},
  abstract = {Timely and reliable forecasts of fire activity are crucial to support operational fire management decisions. Here, we present a data-driven, near-global system to predict fire activity based on Earth observations and weather forecasts. We develop machine learning models trained with global fire radiative power observations and meteorological data to forecast fire occurrence and intensity at 0.25° resolution. We show that prediction skill is comparable to state-of-the-art process-based models, with advantages in reducing false alarms. Feature importance analysis reveals that meteorological variables, especially those related to moisture and temperature, dominate predictions, while fuel and ignition proxies provide additional skill in specific regions. We also show the added value of including climatological fire persistence. This study provides a scalable approach to fire prediction that can complement physical models and support early warning systems in data-sparse regions.}
}


