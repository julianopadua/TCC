@article{kotsiantis2007supervised,
  title = {Supervised Machine Learning: A Review of Classification Techniques},
  author = {S. B. Kotsiantis},
  journal = {Informatica},
  volume = {31},
  year = {2007},
  pages = {249-268},
  [cite_start]abstract = {Supervised machine learning is the search for algorithms that reason from externally supplied instances to produce general hypotheses, which then make predictions about future instances. [cite: 13] [cite_start]In other words, the goal of supervised learning is to build a concise model of the distribution of class labels in terms of predictor features. [cite: 14] [cite_start]The resulting classifier is then used to assign class labels to the testing instances where the values of the predictor features are known, but the value of the class label is unknown. [cite: 15] [cite_start]This paper describes various supervised machine learning classification techniques. [cite: 16] [cite_start]Of course, a single article cannot be a complete review of all supervised machine learning classification algorithms (also known induction classification algorithms), yet we hope that the references cited will cover the major theoretical issues, guiding the researcher in interesting research directions and suggesting possible bias combinations that have yet to be explored. [cite: 16]}
}

@article{wolpert1996lack,
  title = {The Lack of A Priori Distinctions Between Learning Algorithms},
  author = {David H. Wolpert},
  journal = {Neural Computation},
  volume = {8},
  year = {1996},
  pages = {1341-1390},
  [cite_start]abstract = {This is the first of two papers that use off-training set (OTS) error to investigate the assumption-free relationship between learning algorithms. [cite: 1093] [cite_start]This first paper discusses the senses in which there are no a priori distinctions between learning algorithms. [cite: 1094] (The second paper discusses the senses in which there are such distinctions.) [cite_start]In this first paper it is shown, loosely speaking, that for any two algorithms A and B, there are "as many" targets (or priors over targets) for which A has lower expected OTS error than B as vice versa, for loss functions like zero-one loss. [cite: 1095] [cite_start]In particular, this is true if A is cross-validation and B is "anti-cross-validation" (choose the learning algorithm with largest cross-validation error). [cite: 1096] [cite_start]This paper ends with a discussion of the implications of these results for computational learning theory. [cite: 1097] [cite_start]It is shown that one cannot say: if empirical misclassification rate is low, the Vapnik-Chervonenkis dimension of your generalizer is small, and the training set is large, then with high probability your OTS error is small. [cite: 1098] [cite_start]Other implications for "membership queries" algorithms and "punting" algorithms are also discussed. [cite: 1099]}
}

@article{martinovic2025comparative,
  title = {Comparative Analysis of Machine Learning Models for Predicting Innovation Outcomes: An Applied AI Approach},
  author = {Marko Martinović and Kristian Dokic and Dalibor Pudić},
  journal = {Applied Sciences},
  volume = {15},
  year = {2025},
  pages = {3636},
  doi = {10.3390/app15073636},
  url = {https://doi.org/10.3390/app15073636},
  [cite_start]abstract = {Predicting innovation outcomes at the firm level continues to be an important but challenging goal for researchers and practitioners alike. [cite: 2161] [cite_start]In this study, multiple machine learning models, encompassing both ensemble-based and single-model approaches, were applied to data from the Community Innovation Survey. [cite: 2162] [cite_start]Methods included random forests, gradient boosting frameworks, support vector machines, neural networks, and logistic regression, each with hyperparameters optimized through Bayesian search routines and evaluated using corrected cross-validation techniques. [cite: 2163] [cite_start]The results showed that tree-based boosting algorithms consistently outperformed other models in accuracy, precision, F1-score, and ROC-AUC, while the kernel-based approach excelled in recall. [cite: 2164] [cite_start]Logistic regression proved to be the most computationally efficient model despite its weaker predictive power. [cite: 2165] [cite_start]The statistical analyses made it clear that the choice of an appropriate cross-validation protocol and accounting for overlapping data splits are crucial to reduce bias and ensure reliable comparisons. [cite: 2166] [cite_start]Overall, the results indicate that ensemble methods generally provide robust classification performance for innovation prediction tasks. [cite: 2167] [cite_start]However, individual models may still prove advantageous under certain metric-specific conditions or computational constraints. [cite: 2168] [cite_start]These observations emphasize the need to match model selection with data structure, performance objectives, and practical resource constraints when predicting and improving innovation outcomes at the firm level. [cite: 2169]}
}

@article{sculley2014hidden,
  title = {Hidden Technical Debt in Machine Learning Systems},
  author = {D. Sculley and Gary Holt and Daniel Golovin and Eugene Davydov and Todd Phillips and Dietmar Ebner and Vinay Chaudhary and Michael Young and Jean-François Crespo and Dan Dennison},
  journal = {SE4ML: Software Engineering for Machine Learning (NIPS 2014 Workshop)},
  year = {2014},
  [cite_start]abstract = {Machine learning offers a fantastically powerful toolkit for building useful complex prediction systems quickly. [cite: 3554] [cite_start]This paper argues it is dangerous to think of these quick wins as coming for free. [cite: 3555] [cite_start]Using the software engineering framework of technical debt, we find it is common to incur massive ongoing maintenance costs in real-world ML systems. [cite: 3556] [cite_start]We explore several ML-specific risk factors to account for in system design. [cite: 3557] [cite_start]These include boundary erosion, entanglement, hidden feedback loops, undeclared consumers, data dependencies, configuration issues, changes in the external world, and a variety of system-level anti-patterns. [cite: 3558]}
}